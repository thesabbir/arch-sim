{
  "name": "architecture-simulator",
  "version": "2.0.0",
  "description": "Advanced web architecture modeling and simulation tool with granular cost analysis",
  "main": "dist/index.js",
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "arch-sim": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli/index.ts",
    "start": "tsx src/cli/index.ts",
    "build": "pnpm typecheck && pnpm build:cli",
    "build:cli": "tsc",
    "typecheck": "tsc --noEmit",
    "simulate": "tsx src/cli/index.ts simulate",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:architectures": "tsx src/cli/index.ts test \"test/architectures/*.yaml\"",
    "validate": "tsx src/cli/index.ts validate",
    "cost": "tsx src/cli/index.ts cost",
    "generate": "tsx src/cli/index.ts generate ecosystem",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "architecture",
    "simulation",
    "performance",
    "cloud",
    "deployment",
    "cost-optimization",
    "testing"
  ],
  "author": "Architecture Simulator",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.9",
    "@ai-sdk/google": "^2.0.11",
    "@ai-sdk/mistral": "^2.0.12",
    "@ai-sdk/openai": "^2.0.23",
    "ai": "^5.0.29",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "glob": "^11.0.3",
    "js-yaml": "^4.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
